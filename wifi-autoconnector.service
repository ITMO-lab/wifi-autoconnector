[Unit]
Description=Automatic Network Reconfiguration System
After=NetworkManager.service time-sync.target
[Service]
ExecStart=/bin/sh -c "rm -rf /etc/NetworkManager/system-connections/*; /usr/bin/python3 /etc/systemd/system/wifi-autoco$User=root
Type=forking
Restart=on-failure
RestartSec=1
WantedBy=multi-user.target
